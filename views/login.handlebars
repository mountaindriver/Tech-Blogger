<div class="row">
  <div class="col-md-6 bg-success rounded m-2">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label class="font-weight-bolder text-decoration-underline" for="email-login">EMAIL:</label> <br>
        <input class="rounded form-input bg" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label class="font-weight-bolder text-decoration-underline" for="password-login">PASSWORD:</label> <br>
        <input class="rounded form-input bg" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-outline-dark font-weight-bolder" type="submit">LOGIN</button>
      </div>
    </form>
  </div>

  <div class="col-md-6 bg-light rounded m-2">
    <h2>Signup</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label class="font-weight-bolder text-decoration-underline" for="name-signup">NAME:</label> <br>
        <input class="rounded form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label class="font-weight-bolder text-decoration-underline" for="email-signup">EMAIL:</label> <br>
        <input class="rounded form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label class="font-weight-bolder text-decoration-underline" for="password-signup">PASSWORD:</label> <br>
        <input class="rounded form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-outline-dark font-weight-bolder" type="submit">SIGN UP</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
