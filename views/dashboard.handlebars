<h3 class="text-light">Welcome {{blog.[0].user.name}}!</h3>

<div class="d-flex flex-wrap mx-4">
    {{#each blog as |blog1| }}
    <div class="card m-2 bg-success" style="width: 18rem;">
        <div class="card-body">
            <a href="/post/{{blog1.id}}">
                <h5 class="font-weight-bolder text-dark bg-white p-1">{{blog1.name}}</h5>
            </a>
            <p>Created by: {{blog1.user.name}}</p>
            <p class="text-white">{{blog1.description}}</p>
        </div>
    </div>
    {{/each}}
</div>