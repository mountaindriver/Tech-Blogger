<div class="container">
  <div class="row">
    {{#each blogPosts as |blog| }}
    <div class="card m-2" style="width: 18rem;">
      <div class="card-body">
        <a href="/post/{{blog.id}}">
          <h5 class="card-title">{{blog.name}}</h5>
        </a>
        <p class="card-text">{{blog.description}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</div>